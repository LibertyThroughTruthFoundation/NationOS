{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SPINT Contact",
  "description": "Data model for a single contact in the Strategic Intelligence (SPINT) ledger.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the contact (e.g., UUID)."
    },
    "name": {
      "type": "string",
      "description": "The primary name of the contact."
    },
    "profileType": {
      "type": "string",
      "enum": ["Individual", "Organization", "Movement"],
      "description": "The type of entity."
    },
    "status": {
      "type": "string",
      "enum": ["Strategic Ally", "Person of Interest", "Adversary", "Unwitting Oracle"],
      "description": "The contact's current strategic status."
    },
    "coreThesis": {
      "type": "string",
      "description": "The core thesis or narrative of the contact."
    },
    "strategicAnalysis": {
      "type": "object",
      "properties": {
        "strengths": {"type": "string"},
        "weaknesses": {"type": "string"},
        "alignment": {"type": "string"},
        "divergence": {"type": "string"}
      }
    },
    "engagementHistory": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {"type": "string", "format": "date-time"},
          "notes": {"type": "string"}
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"}
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "url": {"type": "string", "format": "uri"}
        }
      }
    }
  },
  "required": ["id", "name", "profileType", "status"]
}
